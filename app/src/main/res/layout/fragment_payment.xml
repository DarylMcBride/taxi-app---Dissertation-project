<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@android:color/background_light">


    <Button
        android:id="@+id/payPalButton"
        android:layout_width="66dp"
        android:layout_height="38dp"
        android:layout_alignStart="@+id/creditCardButton"
        android:layout_below="@+id/CardTVPaymentPref"
        android:background="#000"
        android:text="Edit"
        android:textColor="#fff"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/titleTVPaymentPref"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="Payment Preferences"
        android:textSize="30sp" />

    <ImageButton
        android:id="@+id/backToMapImgButton3"
        android:layout_width="37dp"
        android:layout_height="31dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="18dp"
        android:layout_marginEnd="13dp"
        android:background="#000"
        android:src="@drawable/ic_arrow_back"
        android:text="Button" />

    <TextView
        android:id="@+id/CardTVPaymentPref"
        android:layout_width="208dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="48dp"
        android:layout_marginTop="92dp"
        android:text="Credit Card"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/paypalTV"
        android:layout_width="208dp"
        android:layout_height="51dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/CardTVPaymentPref"
        android:layout_marginTop="140dp"
        android:text="Paypal"
        android:textSize="24sp" />

    <Button
        android:id="@+id/creditCardButton"
        android:layout_width="66dp"
        android:layout_height="38dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/CardTVPaymentPref"
        android:layout_marginEnd="35dp"
        android:background="#000"
        android:text="Edit"
        android:textColor="#fff"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/snippetTVpayment"
        android:layout_width="314dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/backToMapImgButton3"
        android:layout_alignParentStart="true"
        android:layout_marginStart="22dp"
        android:text="Cash payments are selected at the end of the lift if the company has enabled them as a payment method." />

</RelativeLayout>