<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/fromBookingInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/From"
        android:layout_toEndOf="@+id/confirmYourBooking"
        android:text="TextView" />

    <TextView
        android:id="@+id/selectdriverTV"
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="17dp"
        android:layout_marginTop="45dp"
        android:text="Select Driver" />

    <Button
        android:id="@+id/confirmYourBooking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="173dp"
        android:background="#000"
        android:text="Send Request"
        android:textColor="#fff" />

    <TextView
        android:id="@+id/toBookingInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView6"
        android:layout_toEndOf="@+id/confirmYourBooking"
        android:text="TextView" />

    <TextView
        android:id="@+id/distanceTVBookingInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/selectdriverTV"
        android:layout_centerVertical="true"
        android:text="TextView" />

    <TextView
        android:id="@+id/priceTVBookingInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/distanceTVBookingInfo"
        android:layout_marginEnd="93dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/StaticDistanceTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/distanceTVBookingInfo"
        android:layout_alignStart="@+id/selectdriverTV"
        android:text="Distance" />

    <TextView
        android:id="@+id/staticPriceTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/distanceTVBookingInfo"
        android:layout_alignStart="@+id/priceTVBookingInfo"
        android:text="Estimated Price" />

    <TextView
        android:id="@+id/From"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/selectdriverTV"
        android:layout_marginTop="190dp"
        android:text="Pick Up:" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/selectdriverTV"
        android:layout_marginTop="118dp"
        android:text="Destination:" />

    <Button
        android:id="@+id/declineBookingButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="103dp"
        android:background="#000"
        android:text="Decline"
        android:textColor="#fff" />

    <Spinner
        android:id="@+id/selectDriverSpinner"
        android:layout_width="238dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/staticPriceTV"
        android:layout_alignTop="@+id/selectdriverTV" />

</RelativeLayout>