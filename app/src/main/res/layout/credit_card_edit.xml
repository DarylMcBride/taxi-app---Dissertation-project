<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Spinner
        android:id="@+id/monthSpin"
        android:layout_width="104dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />

    <TextView
        android:id="@+id/CVCTV"
        android:layout_width="88dp"
        android:layout_height="36dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/cardNumberTV"
        android:layout_marginTop="190dp"
        android:text="CVC" />

    <TextView
        android:id="@+id/cardHolderTV"
        android:layout_width="88dp"
        android:layout_height="36dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/cardNumberTV"
        android:layout_marginTop="137dp"
        android:text="Card Holder" />

    <TextView
        android:id="@+id/cardNumberTV"
        android:layout_width="88dp"
        android:layout_height="36dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="34dp"
        android:layout_marginTop="73dp"
        android:text="Card Number" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/cardHolderTV"
        android:layout_alignStart="@+id/editText2"
        android:ems="10"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/editText3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/CVCTV"
        android:layout_alignStart="@+id/editText2"
        android:ems="10"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/cardNumberTV"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="46dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/cancelPaymentPref"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/CVCTV"
        android:layout_marginBottom="50dp"
        android:background="#000"
        android:text="Cancel"
        android:textColor="#fff"
        android:textSize="14sp" />

    <Button
        android:id="@+id/confirmButtonPayment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/editText"
        android:layout_alignTop="@+id/cancelPaymentPref"
        android:background="#000"
        android:text="Confirm"
        android:textColor="#fff"
        android:textSize="14sp" />

    <Spinner
        android:id="@+id/yearSpin"
        android:layout_width="104dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="37dp" />

    <TextView
        android:id="@+id/expDateTV"
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:layout_alignStart="@+id/CVCTV"
        android:layout_alignTop="@+id/yearSpin"
        android:text="Expiration Date" />

</RelativeLayout>